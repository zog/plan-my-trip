  %head
    %meta{:charset => "utf-8"}/
    %title PlanMyTrip
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %link{:href => "styles/main.css", :rel => "stylesheet"}/
    %link{:href => "bower_components/leaflet/dist/leaflet.css", :rel => "stylesheet"}/
